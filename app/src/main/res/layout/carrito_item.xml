<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/teal_200">

        <ImageView
            android:id="@+id/carritoImag"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/platovacio"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/teal_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Producto: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/nombre_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre del producto"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio Unit.: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/precio_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/fecha_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hora: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/hora_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hora"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cantidad: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/cant_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cantidad"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total: "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/total_prodcarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_eliminar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>